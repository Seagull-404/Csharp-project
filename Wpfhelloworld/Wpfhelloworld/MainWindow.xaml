<Window x:Class="Wpfhelloworld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfhelloworld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
        <TextBox x:Name="textboxhelloworld" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373" Height="36" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="Buttonsayhello" Content="Click ME" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Height="49" Width="107" Click="Buttonsayhello_Click"/>
    </Grid>
</Window>
